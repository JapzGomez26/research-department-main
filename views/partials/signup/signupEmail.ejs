<title>Sign Up - Mindoro State University</title>
<div class="container-fluid vh-100 d-flex justify-content-center align-items-center bg-light position-relative">
    <% if (typeof alertMessage !== 'undefined') { %>
        <div class="alert alert-<%= alertType %> alert-dismissible fade show position-absolute" role="alert" style="top: 20px; right: 20px; width: 300px; border-radius: 0.5rem;">
            <%= alertMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <div class="rounded shadow p-5 bg-white">
        <div class="text-center mb-4">
            <img src="/images/logo.png" alt="Logo" width="80" height="80" class="mb-3">
            <h4 class="text-uppercase fw-semibold">Registration</h4>
        </div>
        <form action="/signup" method="POST">
            <div class="form-group mb-3">
                <label for="email" class="form-label">Enter your email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
        <div class="mt-3">
            <a href="/" class="btn btn-secondary w-100">Back</a>
        </div>
    </div>
</div>
