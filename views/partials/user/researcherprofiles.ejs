    <div class="text-center mb-5">
        <h2 class="display-5">Meet Our Researchers</h2>
        <p class="text-muted">Explore profiles of Mindoro State University’s esteemed researchers.</p>
    </div>
    
    <style>
        /* Updated styling for the section */
        .text-center {
            text-align: center;
        }
    
        .display-5 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #212529;
            margin-bottom: 1rem;
            text-transform: uppercase;  /* Added uppercase text transformation */
        }
    
        .text-muted {
            font-size: 1rem;
            color: #6c757d;
            line-height: 1.6;
            margin-bottom: 1rem;
        }
    
        /* Card Style Enhancements */
        .text-center h2, .text-center p {
            transition: transform 0.3s ease, color 0.3s ease;
        }
    
        .text-center h2:hover, .text-center p:hover {
            color: #007bff; /* Change color on hover */
            transform: translateY(-3px); /* Add subtle hover effect */
        }
    
        /* Background and Border Enhancements */
        .text-center {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin: 2rem auto;
            max-width: 80%;
            transition: box-shadow 0.3s ease, background-color 0.3s ease;
        }
    
        .text-center:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            background-color: #e9ecef; /* Slight background darken on hover */
        }
    </style>
    

    <!-- Researcher  -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% researchers.forEach(researcher => { %>
        <div class="col">
            <div class="card border-0 shadow-sm text-center">
                <img src="/images/profile.jpg" class="card-img-top rounded-circle mx-auto mt-3" alt="Researcher Photo" style="width: 150px; height: 150px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title"><%= researcher.first_name %> <%= researcher.last_name %></h5>
                    <p class="card-text text-muted"></p>
                    <a href="#" class="btn btn-outline-primary btn-sm">View Profile</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>